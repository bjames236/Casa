<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigationMenuUI.menuChangePassword">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_settings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/primary">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/arrowback_ChangePassword"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@color/primary"
                    android:src="@drawable/ic_arrow_back"
                    tools:ignore="SpeakableTextPresentCheck" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/changePasswordSecurity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar_settings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/acme"
        android:text="Change Password"
        android:textColor="#4CAF50"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/secuityOldPassword"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/changePasswordSecurity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_background"
        android:drawableLeft="@drawable/ic_baseline_security_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Old Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/secuityNewPassword"
        android:drawableLeft="@drawable/ic_baseline_security_24"
        android:drawablePadding="10dp"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="New Password"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_background"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_below="@id/secuityOldPassword"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/securyConfirmPassword"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_background"
        android:drawableLeft="@drawable/ic_baseline_security_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Confirm New Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_below="@id/secuityNewPassword"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/securityChangePassBTN"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/securyConfirmPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/aldrich"
        android:text="Change Password" />

</RelativeLayout>