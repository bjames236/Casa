            </HorizontalScrollView>

            <TextView
                android:id="@+id/ListerRentEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageScroll"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/input_background"
                android:fontFamily="casual"
                android:padding="8dp"
                android:text="Rent: 00000 per month"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ListerAddressEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ListerRentEditText"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/input_background"
                android:fontFamily="casual"
                android:padding="8dp"
                android:text="Location: Ijay Balay Me"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ListerDescriptionEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ListerAddressEditText"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/input_background"
                android:fontFamily="casual"
                android:textSize="20sp"
                android:text=""
                android:padding="8dp"
                android:textColor="@color/black" />

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_above="@id/listerdateandtimeposted"
        android:layout_marginTop="20dp"
        android:background="@color/seconday"/>

    <TextView
        android:id="@+id/listerdateandtimeposted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/relative2"
        android:textAlignment="center"
        android:fontFamily="casual"
        android:text="Jan. 1, 2023 : 1:00 am"
        android:textSize="20sp"
        android:textColor="@color/seconday" />

    <RelativeLayout
